<resources>
    <color name="primaryColor">#673AB7</color>
    <color name="primaryColorDark">#512DA8</color>
    <color name="accentColor">#FF5252</color>
    <color name="disabled">#525252</color>
    <color name="textColor">@android:color/black</color> <!--black -->
    <color name="drawer_header_text_color">@android:color/white</color> <!-- left drawer header txt color-->
    <color name="drawer_header_color">@color/primaryColor</color> <!-- left drawer header background color-->
    <color name="drawer_background_color">@android:color/white</color> <!-- left drawer menu background color-->
    <color name="drawer_text_color">@color/textColor</color> <!-- left drawer menu txt color-->
    <color name="drawer_menu_icon_checked_color">@color/accentColor</color> <!-- left drawer menu checked element icon color-->
    <color name="drawer_menu_icon_normal_color">@color/textColor</color> <!-- left drawer menu element icon color-->
    <color name="drawer_menu_text_checked_color">@color/accentColor</color> <!-- left drawer menu checked element txt color-->
    <color name="drawer_menu_text_normal_color">@color/textColor</color> <!-- left drawer menu checked element txt color-->
    <color name="spinner_bg_color">@android:color/white</color> <!-- spinner box -->
    <color name="spinner_txt_area_color">@android:color/white</color> <!-- "Reverb" txt area plus a small part at right of the spinner box -->
    <color name="gallery_bg_color">@android:color/white</color> <!-- horizontal bar where you can scroll the eq presets (after the eq and before the knobs -->
    <color name="disabled_gallery_text">@color/disabled</color> <!-- eq presets text color when musicfx is disabled -->
    <color name="highlight_gallery_text">@color/accentColor</color> <!-- eq presets text color when musicfx is on for the current selected preset -->
    <color name="lowlight_gallery_text">@color/disabled</color> <!-- eq presets text color when musicfx is on for other available presets -->
    <color name="knobs_area_background">@color/mainBackgroundColor</color> <!-- area around knobs also at right of the eq area -->
    <color name="knob_disabled">@color/disabled</color> <!-- knobs level when musicfx is off -->
