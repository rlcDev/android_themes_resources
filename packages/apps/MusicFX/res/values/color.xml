    <color name="eq_area_background">#eeeeee</color> <!-- eq levels area -->
    <color name="eq_textColor">@color/textColor</color> <!--eq levels min-middle-max indicators txt -->
    <color name="mainBackgroundColor">#eeeeee</color> <!-- horizontal empty space between the bar showing the current active out source and the eq levels area -->
    <color name="current_out_source">#9e9e9e</color> <!-- the bar with the current active out source icon and name -->
    <color name="current_out_source_color">@android:color/white</color> <!-- icon and text showing the current active out source -->
    <color name="visualizer_highlight">@color/accentColor</color> <!-- equalizer active level bar top element  -->
    <color name="visualizer_lowlight">#ff8787</color> <!-- equalizer active level bar elements -->
    <color name="visualizer_disabled">@color/disabled</color> <!-- equalizer level bar when musicfx is off -->

</resources>
